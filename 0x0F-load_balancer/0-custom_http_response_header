#!/usr/bin/env bash
# Configure a new Ubuntu machine with Nginx server to include HTTP header

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Allow HTTP traffic through the firewall
sudo ufw allow "Nginx HTTP"

# Create a simple HTML page
echo "<h2>Hello World!</h2>" | sudo tee /var/www/html/index.html

# Add a 301 redirect to the Nginx default site configuration
sudo sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 http://github.com;\n\t}' /etc/nginx/sites-available/default

# Create a custom 404 page
echo "<h5>Ceci n'est pas une page</h5>" | sudo tee /var/www/html/custom_404.html

# Add custom 404 error page to the Nginx default site configuration
sudo sed -i '/server_name _;/a \\n\terror_page 404 /custom_404.html;\n\tlocation = /custom_404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Add custom HTTP header to the Nginx default site configuration
sudo sed -i '/server_name _;/a \\n\tadd_header X-served-By $hostname;' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
