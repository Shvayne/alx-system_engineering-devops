#!/usr/bin/env bash
#configure a new ubuntu machine with HAproxy load balancer

conf="\
frontend hypotherm-frontend
	bind *:80
	mode http
	default_backend hypotherm-backend

backend hypotherm-backend
	balance roundrobin
	server 297641-web-01 54.157.191.90:80 check
	server 297641-web-02 100.26.227.34:80 check
"

sudo apt-get -y update
sudo apt-get install -y --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.8

sudo apt-get install -y haproxy
sudo cp -a /etc/haproxy/haproxy.cfg{,.orig}
echo "$conf" | sudo tee -a /etc/haproxy/haproxy.cfg
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy
sudo service haproxy restart
